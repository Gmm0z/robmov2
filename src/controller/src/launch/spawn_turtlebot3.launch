<launch>
    <!-- Define the model type -->
    <arg name="model" default="waffle_pi" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="robot_name" default="turtle_1"/>
    <arg name="pos_x" default="0.0"/>
    <arg name="pos_y" default="0.0"/>
    <arg name="pos_z" default="0.0"/>
    <arg name="yaw" default="0"/>
    
    <!-- Include TurtleBot3 remote operation launch file -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
        <arg name="model" value="$(arg model)"/>
    </include>
    
    <!-- Spawn TurtleBot3 robot in Gazebo -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    
    <node name="urdf_robot_model_spawner" pkg="gazebo_ros" type="spawn_model"
          args="-param robot_description -urdf -x $(arg pos_x) -y $(arg pos_y) -z $(arg pos_z) -Y $(arg yaw) -model $(arg robot_name)"
          respawn="false" output="screen"/>



</launch>

